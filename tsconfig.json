{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "20.1.0",
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitAny": false,
    "module": "CommonJS",
    "moduleResolution": "Node10",
    "pretty": true,
    "types": ["node", "mocha"],
    "sourceMap": true,
    "target": "ES2022",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": ["ES2023", "ESNext.AsyncIterable"],
    "baseUrl": "./src",
    "outDir": "dist",
    "paths": {
      "@Decorators/*": ["decorators/*"],
      "@Libs/*": ["libs/*"],
      "@Enums/*": ["enums/*"],
      "@Configs/*": ["configs/*"],
      "@Providers/*": ["providers/*"],
      "@Jobs/*": ["jobs/*"],
      "@Bots/*": ["bots/*"],
      "@Middlewares/*": ["middlewares/*"],
      "@Errors/*": ["errors/*"],
      "@Models/*": ["databases/mongodb/models/*"],
      "@ModelConstant/*": ["databases/mongodb/constants/*"],
      "@Entities/*": ["entities/*"],
      "@Repositories/*": ["repositories/*"],
      "@Consumers/*": ["consumers/*"],
      "@Services/*": ["services/*"],
      "@Sockets/*": ["sockets/*"],
      "@Rests/*": ["rests/*"],
      "@Resolvers/*": ["resolvers/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*"]
}
